<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="480.0" prefWidth="854.0" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.ufrn.imd.controller.MainMenuController">
   <center>
      <AnchorPane maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0">
         <Pane prefHeight="400.0" prefWidth="600.0">
            <children>
               <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0">
                  <children>
                     <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Difficulty:" textAlignment="CENTER">
                        <VBox.margin>
                           <Insets top="20.0" />
                        </VBox.margin>
                     </Text>
                     <TextField fx:id="difficultyTextField" alignment="CENTER" editable="false" text="Difficulty">
                        <VBox.margin>
                           <Insets left="230.0" right="230.0" />
                        </VBox.margin>
                     </TextField>
                     <Text strokeType="OUTSIDE" strokeWidth="0.0" text="User Logged:" textAlignment="CENTER" />
                     <TextField fx:id="usernameTextField" alignment="CENTER" editable="false" text="Username">
                        <VBox.margin>
                           <Insets bottom="20.0" left="230.0" right="230.0" />
                        </VBox.margin>
                     </TextField>
                     <Button onAction="#onPlayButtonClick" text="Play" />
                     <Button onAction="#onDifficultyButtonClick" text="Difficulty" />
                     <Button onAction="#onScoreboardButtonClick" text="Scoreboard" />
                     <Button onAction="#onAboutButtonClick" text="About" />
                     <Button onAction="#onExitButtonClick" text="Exit" />
                  </children>
               </VBox>
            </children>
         </Pane>
      </AnchorPane>
   </center>
</BorderPane>
