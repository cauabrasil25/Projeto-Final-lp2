<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="br.ufrn.imd.controller.DifficultyController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="10.0" layoutX="200.0" layoutY="100.0">
        <Button fx:id="easyButton" text="Easy" onAction="#onEasyButtonClick"/>
        <Button fx:id="normalButton" text="Normal" onAction="#onNormalButtonClick"/>
        <Button fx:id="hardButton" text="Hard" onAction="#onHardButtonClick"/>
    </VBox>
</AnchorPane>
